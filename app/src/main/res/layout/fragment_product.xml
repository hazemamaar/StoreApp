<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProductFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_156sdp"
        android:background="@drawable/tablayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/continer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_156sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/_7sdp"
            >
        <ImageView
            android:id="@+id/cartimg"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/cart"
            app:layout_constraintBottom_toTopOf="@id/inputTextLayoutSearch"
            app:layout_constraintStart_toStartOf="parent"


            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputTextLayoutSearch"
            style="@style/text_input_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:hint="Search..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:endIconTint="@color/whiteblue"
            app:endIconMode="custom"
            android:focusable="false"
            app:startIconDrawable="@drawable/ic_search"
            app:layout_constraintTop_toBottomOf="@id/cartimg"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEditTextSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusedByDefault="false"
                android:inputType="text"
                android:padding="@dimen/_5sdp" />
        </com.google.android.material.textfield.TextInputLayout >

            <ImageView
                android:id="@+id/jewelryimg"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:src="@drawable/jewelry"
                app:layout_constraintTop_toBottomOf="@id/inputTextLayoutSearch"
                app:layout_constraintStart_toStartOf="parent"
                />
            <ImageView
                android:id="@+id/clothesimg"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/dress"
                app:layout_constraintTop_toBottomOf="@id/inputTextLayoutSearch"
                app:layout_constraintStart_toEndOf="@id/jewelryimg"
                />

            <ImageView
                android:id="@+id/electrimg"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/electronic"
                app:layout_constraintTop_toBottomOf="@id/inputTextLayoutSearch"
                app:layout_constraintStart_toEndOf="@id/clothesimg"
                />

            <ImageView
                android:id="@+id/wonenclothing"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/fashion"
                app:layout_constraintTop_toBottomOf="@id/inputTextLayoutSearch"
                app:layout_constraintStart_toEndOf="@id/electrimg"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
 </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Product_Rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_margin="@dimen/_10sdp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>