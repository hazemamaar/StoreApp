<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoreApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/whiteblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_input_style" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">15sp</item>
        <item name="boxCornerRadiusBottomStart">15sp</item>
        <item name="boxCornerRadiusTopEnd">15sp</item>
        <item name="boxCornerRadiusTopStart">15sp</item>
        <item name="boxStrokeColor">@color/whiteblue</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="maxLines">1</item>
        <item name="boxBackgroundColor">@color/inputcolor</item>
        <item name="helperTextTextColor">@color/whiteB</item>
    </style>

    <style name="button_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
    <item name="cornerRadius">10dp</item>
    <item name="backgroundTint">@color/darkblue</item>
    <item name="textAllCaps">false</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:padding">13dp</item>
    </style>

    <style name="button_facebook_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">#4267B2</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:padding">12dp</item>
        <item name="icon">@drawable/facebook</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="button_google_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@android:color/holo_blue_dark</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="icon">@drawable/google</item>
        <item name="iconTint">@color/white</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>